@using ProniaFrontToBack.ViewModels.Basket
@model List<CartVm>
@{
    double totalPrice = 0;
}
<div class="offcanvas-minicart_wrapper" id="miniCart">
    <div class="offcanvas-body">
        <div class="minicart-content">
            <div class="minicart-heading">
                <h4 class="mb-0">Shopping Cart</h4>
                <a href="#" class="button-close">
                    <i class="pe-7s-close"
                    data-tippy="Close"
                    data-tippy-inertia="true"
                    data-tippy-animation="shift-away"
                    data-tippy-delay="50"
                    data-tippy-arrow="true"
                    data-tippy-theme="sharpborder"></i>
                </a>
            </div>
            <ul class="minicart-list">
                @foreach (var item in Model)
                {
                    totalPrice += item.Price * item.Count;
                    <li class="minicart-product">
                        <a class="product-item_remove" href="#">
                            <i class="pe-7s-close"
                               data-tippy="Remove"
                               data-tippy-inertia="true"
                               data-tippy-animation="shift-away"
                               data-tippy-delay="50"
                               data-tippy-arrow="true"
                               data-tippy-theme="sharpborder"></i>
                        </a>
                        <a href="single-product-variable.html"
                           class="product-item_img">
                            <img class="img-full"
                                 src="~/Upload/Product/@item.ImgUrl"
                                 alt="Product Image" />
                        </a>
                        <div class="product-item_content">
                            <a class="product-item_title"
                               asp-controller="Home" asp-action="Detail" asp-route-id="@item.Id">@item.Name</a>
                            <span class="product-item_quantity">@item.Count x $@item.Price</span>
                        </div>
                    </li>
                }
            </ul>
        </div>
        <div class="minicart-item_total">
            <span>Subtotal</span>
            <span class="ammount">$@totalPrice</span>
        </div>
        <div class="group-btn_wrap d-grid gap-2">
            <a asp-controller="Cart" asp-action="Index">View Cart</a>
            <a href="checkout.html" class="btn btn-dark">Checkout</a>
        </div>
    </div>
</div>